<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <link rel="stylesheet" href="/css/admin.css" />
  <body>
    <div class="page">
      <% include components/top.inc.ejs %>
      <div class="content-wrap">
      <br>
        <div><a href="?act=add">添加banner</a></div>



        <br>
       <table width="100%" border="1">
<thead>
<tr>
  <th>ID</th><th>标题</th><th>描述</th><th>链接</th><th>操作</th>
</tr>

</thead>

<tbody>
<% for(var i=0;i<banners.length;i++){ %>
<tr>
  <td width="3%"><%= banners[i].ID %></td>
  <td width="15%"><%= banners[i].title %></td>
  <td width="60%"><%= banners[i].txt %></td>
  <td width="15%"><img height="40" width="40" src="/upload/<%= banners[i].href %>" alt=""></td>
  <td width="7%"><a href="?act=mod&id=<%= banners[i].ID %>">更改</a>&nbsp;<a href="?act=del&id=<%= banners[i].ID %>" onclick="return confirm('你确定要删除吗？')">删除</a></td>
</tr>
<% } %>


</tbody>



       </table>





      </div>
    </div>
  </body>
</html>
